<h1><%= @employee.first_name %>'s Page</h1>

<img src="<%= @employee.img_url %>" alt="">

<ul>
  <li>Full Name: <%= "#{@employee.first_name} #{@employee.last_name}" %></li>
  <li>Alias: <%= @employee.alias %></li>
  <li>Title: <%= @employee.title %></li>
  <li>Office: <%= @employee.office %></li>
  <li>Image URL: <%= @employee.img_url %></li>
  <li>Dog Name: <%= @employee.dog.name %></li>
</ul>

<%= button_to "EDIT", edit_employee_path, method: :get %>
<%= button_to "DELETE", @employee, method: :delete %>
